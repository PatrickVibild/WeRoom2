<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="402dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="521dp"
            android:orientation="vertical">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/dislikeButton"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="420dp"
            android:background="@drawable/custom_dislike_button"
            android:scaleType="fitCenter"
            android:shadowColor="@color/black"
            android:src="@drawable/ic_close_red" />

        <ImageButton
            android:id="@+id/likeButton"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="420dp"
            android:layout_marginEnd="70dp"
            android:background="@drawable/custom_dislike_button"
            android:scaleType="fitCenter"
            android:shadowColor="@color/black"
            android:src="@drawable/ic_check_light_green" />

        <ImageButton
            android:id="@+id/regretButton"
            android:layout_width="74dp"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="493dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/likeButton"
            android:layout_toEndOf="@+id/dislikeButton"
            android:background="@drawable/custom_dislike_button"
            android:scaleType="fitCenter"
            android:shadowColor="@color/black"
            android:src="@drawable/ic_refresh_yellow" />

        <include
            layout="@layout/activity_navigation_bar_fragment"
            android:layout_width="433dp"
            android:layout_height="662dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp" />

    </RelativeLayout>

</RelativeLayout>