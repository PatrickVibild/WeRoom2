<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/delete_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:background="@drawable/drawable_custom_button"
        android:layout_centerHorizontal="true"
        android:text="@string/delete_account"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/battery_safe_mode" />

    <Switch
        android:id="@+id/battery_safe_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:text="@string/battery_safe"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/delete_account" />
</RelativeLayout>