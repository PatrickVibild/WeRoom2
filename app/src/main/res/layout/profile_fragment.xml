<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/profilePhoto"
                android:layout_width="166dp"
                android:layout_height="156dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="120dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="center"
                app:layout_constraintBottom_toTopOf="@+id/createprofile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.138"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.138"
                app:srcCompat="@drawable/add_profile_picture" />

            <ImageButton
                android:id="@+id/buttonProfilePhoto"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="140dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="140dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.704"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.262"
                app:srcCompat="@android:drawable/ic_menu_camera" />

            <EditText
                android:id="@+id/username"

                android:layout_width="311dp"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="50dp"
                android:layout_weight="1"
                android:background="@layout/rounded_border_edittext"
                android:cursorVisible="true"
                android:ems="10"
                android:hint="@string/hint_name"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/age"
                android:layout_width="311dp"
                android:layout_height="50dp"

                android:layout_marginStart="50dp"

                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:background="@color/quantum_grey400"
                android:ems="10"
                android:hint="@string/hint_age"
                android:inputType="phone"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.91"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.274" />

            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="311dp"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:background="@color/quantum_grey400"
                android:entries="@array/gender_array"
                android:popupBackground="@color/quantum_grey400" />

            <Spinner
                android:id="@+id/spinnerCountry"
                android:layout_width="311dp"
                android:layout_height="40dp"

                android:layout_marginStart="50dp"

                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:background="@color/quantum_grey400"
                android:popupBackground="@color/quantum_grey400"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.91"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.444" />

            <Spinner
                android:id="@+id/spinnerRole"
                android:layout_width="311dp"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_weight="1"
                android:background="@color/quantum_grey400"
                android:entries="@array/role_array"
                android:popupBackground="@color/quantum_grey400" />

            <com.itcom202.weroom.account.profiles.TagDescription.TagView
                android:id="@+id/tags"
                android:layout_width="311dp"
                android:layout_height="132dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="0dp"
                android:background="@color/quantum_grey400"
                android:hint="@string/description"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinnerCountry"
                app:layout_constraintVertical_bias="0.115"
                app:tag_background_color="#FF5A60"
                app:tag_limit="10"
                app:tag_text_color="@color/white" />

            <Button
                android:id="@+id/createprofile"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="80dp"
                android:layout_marginBottom="20dp"
                android:background="#FF5A60"
                android:text="@string/create_profile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.528"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bottomfield" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>