<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textViewTitle_tenantProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="30dp"
                android:text="@string/looking_for"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/idCardViewCities_tenantProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="11dp"
                app:cardCornerRadius="4dp">

                <fragment
                    android:id="@+id/autocomplete_fragment"
                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/textViewRadius_tenantProfile"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="0dp"
                android:text="@string/radius_from_center"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <com.itcom202.weroom.account.profiles.SeekBar.BubbleSeekBar
                android:id="@+id/radiusCenter_tenantProfile"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="start"
                    android:text="@string/_5km"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="end"
                    android:text="@string/_50km"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewChoosePeriod_tenantProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="30dp"
                android:text="@string/choose_period"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/spinnerPeriodRenting_tenantProfile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:background="@color/quantum_grey400"
                android:entries="@array/rending_period_array"
                android:popupBackground="@color/quantum_grey400"
                android:spinnerMode="dropdown" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:text="@string/deposit"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/depositMin_tenantProfile"
                    android:layout_width="20dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="52dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:background="@color/quantum_grey400"
                    android:ems="10"
                    android:hint="@string/min"
                    android:inputType="number"
                     />

                <EditText
                    android:id="@+id/depositMax_tenantProfile"
                    android:layout_width="20dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="84dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:background="@color/quantum_grey400"
                    android:ems="10"
                    android:hint="@string/max"
                    android:inputType="number"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewRent_tenantProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/rent"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="30dp"/>
                <EditText
                    android:id="@+id/rentMin_tenantProfile"
                    android:layout_width="20dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="52dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:background="@color/quantum_grey400"
                    android:ems="10"
                    android:hint="@string/min"
                    android:inputType="number"
                    />

                <EditText
                    android:id="@+id/rentMax_tenantProfile"
                    android:layout_width="20dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="84dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:background="@color/quantum_grey400"
                    android:ems="10"
                    android:hint="@string/max"
                    android:inputType="number"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewPetFr_tenantPRofile"
                    android:layout_width="99dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/pet_friendly"
                    android:textColor="@color/black" />

                <RadioGroup
                    android:layout_width="315dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButtonYesPet_tenantProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:text="@string/yes"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/radioButtonNoPet_tenantProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:text="@string/no"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/radioButtonDCPet_tenantProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:text="@string/don_t_care"
                        android:textColor="@color/black" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewSmokeFr_tenantProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/smoke_friendly"
                    android:textColor="@color/black" />

                <RadioGroup
                    android:layout_width="315dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButtonYesSmoke_tenantProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:text="@string/yes"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/radioButtonNoSmoke_tenantProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:text="@string/no"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/radioButtonDCSMoke_tenantProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:text="@string/don_t_care"
                        android:textColor="@color/black" />
                </RadioGroup>
            </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewFurnished_tenantPRofile"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:text="@string/furnished"
            android:textColor="@color/black" />

        <RadioGroup
            android:layout_width="315dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonYesFurnished_tenantProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="@string/yes"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioButtonNoFurnished_tenantProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:text="@string/no"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioButtonDCFurnished_tenantProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="@string/don_t_care"
                android:textColor="@color/black" />

        </RadioGroup>

    </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/textViewInternet_tenantProfile"
                    android:layout_width="99dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/internet"
                    android:textColor="@color/black" />

                <RadioGroup
                    android:layout_width="315dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButtonYesInternet_tenantProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:text="@string/yes"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/radioButtonNoInternet_tenantProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:text="@string/no"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/radioButtonDCInternet_tenantProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:text="@string/don_t_care"
                        android:textColor="@color/black" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/textViewLaundry_tenantProfile"
                    android:layout_width="99dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/laundry"
                    android:textColor="@color/black" />

                <RadioGroup
                    android:layout_width="315dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButtonYesLaundry_tenantProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:text="@string/yes"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/radioButtonNoLaundry_tenantProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:text="@string/no"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/radioButtonDCLaundry_tenantProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:text="@string/don_t_care"
                        android:textColor="@color/black" />

                </RadioGroup>
            </LinearLayout>

            <Button
                android:id="@+id/confirmButton_tenantProfile"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="#FF5A60"
                android:text="@string/confirm"
                android:layout_gravity="center"
                 />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:background="#CCFF5A60"
                 />
        </LinearLayout>
    </ScrollView>

</LinearLayout>